<div class="profile">
    <h3>Login Profile:<%= current_user.username %></h3>
    <%# if session[:user_id] %>
    <%# end %>
    Followers<h6 style="color:black;"><%= current_user.followed_users.count %></h6>
    Following<h6 style="color:black;"><%= current_user.following_users.count %></h6>
</div>
<div class="corner">
    <%= link_to 'Logout', logout_path, :method => :delete, class: "btn btn-primary" %>
</div>
<div class="container">
    <div class="center">Posts Listing</div>
    <div>
        <table>
            <tr>
                <th>User </th>
                <th>Title </th>
                <th>Pictures</th>
                <th>Body </th>
                <th>Total Comments</th>
                <th>Likes </th>
            </tr>
            <% @posts.each do |post| %>
            <tr>
                <td><%= post.user.username %></td>
                <td><%= post.username %></td>
                <td><%= image_tag post.images.last, width: "200px", height: "150px" if post.images.present? %></td>
                <td><%= post.body %></td>
                <td><%= post.comments.size %></td>
                <td><%= post.likes_count %></td>
                <td><%= link_to "Write comments", new_post_comment_path(post) %></td>
                <td><%= link_to "Edit", edit_post_path(post) %></td>
                <td><%= link_to "Destroy", post_path(post), turbo_method: :delete %></td>
            </tr>
            <% end %>
        </table>
    </div>
    <%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
</div>
