<div class="profile">
  <h3>Login Profile:<%= current_user.username %></h3>
  <%# if session[:user_id] %>
  <%= link_to 'Logout', logout_path, :method => :delete, class: "btn btn-primary" %>
  <%# end %>
</div>
<div class="container">
  <h1><strong>Posts Listing</strong></h1>
  <div>
    <%# @posts.each do |post| %>
    <%#= render "form" %>
    <table class="center">
      <tr>
        <th>User </th>
        <th>Title </th>
        <th>Pictures</th>
        <th>Body </th>
        <th>Likes </th>
      </tr>
      <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.username %></td>
        <td><%= post.username %></td>
        <td><%= image_tag post.images.last, width: "100px", height: "80px" if post.images.present? %></td>
        <td><%= post.body %></td>
        <td><%= post.likes_count %></td>
        <td><%= link_to "Edit", edit_post_path(post) %></td>
        <td><%= link_to "Destroy", post_path(post), turbo_method: :delete %></td>
      </tr>
      <% end %>

    </table>
  </div>
  <%= link_to "New Post", new_post_path, class: "btn btn-primary" %>
</div>