<div class="profile">
  <h3>Login Profile:<%= current_user.username %></h3>
</div>
<h3>Show user Post</h3>
<%= render @post %>
<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to "Back to posts", posts_path %> |
  <%= link_to "Destroy this post", post_path(@post), turbo_method: :delete %>
</div>
<h3>Comments</h3>
<%= render @post.comments %>



